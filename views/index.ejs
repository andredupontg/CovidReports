<%- include("partials/header"); -%>

<main class="form-signin">
    <form method="POST" action="/">
        <h1 class="h3 mb-3 fw-normal">Covid Reports</h1>
        <div class="form-floating">
            <input type="text" name="year" class="form-control" id="floatingInput" autocomplete="off">
            <label for="floatingInput">YYYY</label>
        </div>
        <div class="form-floating">
            <input type="text" name="month" class="form-control" id="floatingInput" autocomplete="off">
            <label for="floatingInput">MM</label>
        </div>
        <div class="form-floating">
            <input type="text" name="day" class="form-control" id="floatingInput" autocomplete="off">
            <label for="floatingInput">DD</label>
        </div>
        <div class="form-floating">
            <input type="text" name="country" class="form-control" id="floatingInput" autocomplete="off">
            <label for="floatingInput">Country</label>
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Request</button>
    </form>
</main>

<%- include("partials/footer"); -%>